{{!-- view-product --}}
<section>
  <div class="container">
    <link rel="stylesheet" href="/stylesheets/admin.css">
    <div class="row mt-5 " style="margin-top: 2px;margin-bottom: 50px;">
      <a href="/admin/add-product" class="btn btn-success ml-auto">Add product</a>
    </div>
    <table class="table mt-5" id="table_id">
      <thead>
        <tr>

          <th scope="col">Title</th>
          <th scope="col">Category</th>
          <th scope="col">Price</th>
          <th scope="col">Brand</th>
          <th scope="col">Description:</th>
          <th>images</th>
          <th>options</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>

          <td>{{this.Name}}</td>
          <td>{{this.Category}}</td>
          <td>{{this.Price}}</td>
          <td>{{this.Brand}}</td>
          <td>{{this.Description}}</td>
          <td><img style="width:60px; height:60px" , src="/product-images/{{this._id}}.jpg" , alt="">
          </td>
          <td>
            <a href="/admin/edit-product/{{this._id}}" id="successEdit" class=" btn btn-success">Edit</a>
            <a href="/admin/delete-product/{{this._id}}" id="successDelete" class=" btn btn-danger"
              onclick="return confirm('Are you want to delete{{this.Name}} ?')">
              Delete</a>

          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>
<script>
  $(function () {
    $('#table_id').DataTable();
  });
</script>