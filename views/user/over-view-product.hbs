<link rel="stylesheet" href="/stylesheets/reviewView.css">


<!-- Contenedor Principal -->

<div class="comments-heignt">
    {{#if reviews}}
    <h1>Top reviews from India</h1>

    {{#each reviews}}
    <div class="comments-container">
        <ul id="comments-list" class="comments-list">
            <li>
                <div class="comment-main-level">
                    <!-- Avatar -->
                    <div class="comment-avatar"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                            fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                            <path fill-rule="evenodd"
                                d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
                    </div>
                    <!-- Contenedor del Comentario -->

                    <div class="comment-box">
                        <div class="comment-head">
                            <h6 class="comment-name by-author"><a id="username" href="">
                                    {{this.userName}}
                                </a></h6>
                            <span>{{this.date}}</span>

                        </div>
                        <div class="comment-content">
                            {{this.commant}}
                        </div>

                        {{#each ../Value}}
                        {{#if ../Value}}

                        <a href="/delete-review/{{../user._id}}" id="successDelete" class="link-warning"
                            onclick="return confirm('Are you want to delete this review ?')">
                            Delete</a>


                        <a href="/update-review/{{this._id}}" id="successupdates" class="link-success" {{!--
                            onclick="return confirm('Are you want to update this review ?')"> --}}
                            > update</a>
                        {{/if}}
                        {{/each}}

                    </div>
                </div>
    </div>
</div>
{{/each}}
{{else}}
<li class="list-group-item text-center">There are no reviews</li>
{{/if}}
</div>
