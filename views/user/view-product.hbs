  <section>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100" src="/header/zfold3_carousel_waterproof_kv_pc (3).png" alt="First slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="/header/zfold3_carousel_waterproof_kv_pc (5).png" alt="Second slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="/header/zfold3_carousel_waterproof_kv_pc.jpg" alt="Third slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="/header/zfold3_carousel_waterproof_kv_pc.jpg" alt="four slide">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </section>
  {{!-- HOME PAGE--}}
  <section>
    <div id="gw-layout" class="a-section a-spacing-none aok-relative">
      <div>
        <div class=" container mt-5">
          <div class="row ">
            {{#each products}}
            <div class="col-md-4 product-index-box">
              <a href="/over-view-product/{{this._id}}" class="col text-center product__link">
                <div class="card" class="col text-center product__link" style="width: 15rem; height:24rem">
                  <img class="card-img-top" src="/product-images/{{this._id}}.jpg" alt="Card image cap"
                    style="height:12rem;" loading="lazy" />
                  <div class="card-body">
                    <h5 class="card-title">{{this.Name}}</h5>
                    <div class="showcase-rating">
                      <ion-icon name="star"></ion-icon>
                      <ion-icon name="star"></ion-icon>
                      <ion-icon name="star"></ion-icon>
                      <ion-icon name="star-outline"></ion-icon>
                      <ion-icon name="star-outline"></ion-icon>
                    </div>

                    <p class="card-title">₹ {{this.Price}}</p>

              </a>
              <button onclick="addToCart('{{this._id}}')" class=" btn btn-primary"> Add to Shopping Cart</button>
            </div>
          </div>
        </div>
        {{/each}}

      </div>
    </div>
    </div>
